<% if @userfile.is_locally_synced? %>
  <% if @userfile.list_files(".", :directory).any? { |dir| dir.name[-3, 3] == "/QC" } %>
    <%= link_to("Show QC Data",
                display_userfile_path(@userfile,
                            :viewer       => "qc_file",
                            :qc_file      => "base",
                            :apply_layout => "yes",
                           ),
                :class => "action_link",
                :target => "_blank") %>
    <br>
    <%= overlay_ajax_link "Civet QC Legend", display_userfile_path(@userfile, :viewer => :civetqc_legend), :class => "action_link" %>
  <% end %>
<% end %>

<p>

<strong>CIVET Outputs:</strong>

<ul>
<% @userfile.subject_ids.each do |civet_output_id| %>
  <li>
    <%= link_to("Subject: #{civet_output_id.to_s}", url_for(:controller => :userfiles, :action => :show, :id => civet_output_id.to_s)) %>
  </li>
<% end %>
</ul>

